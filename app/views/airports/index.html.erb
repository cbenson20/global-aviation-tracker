<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="text-primary">Airports Directory</h2>

    <%= form_with(url: airports_path, method: :get, local: true, class: "d-flex") do %>
      <%= text_field_tag :q, params[:q], placeholder: "Search airports...", class: "form-control me-2" %>
      <%= select_tag :country, options_for_select(@countries, params[:country]), include_blank: "All Countries", class: "form-select me-2" %>
      <%= submit_tag "Search", class: "btn btn-outline-primary" %>
    <% end %>
  </div>

  <div class="card shadow-sm">
    <div class="card-body p-0">
      <% if @airports.any? %>
        <table class="table table-striped table-hover mb-0">
          <thead class="table-primary">
            <tr>
              <th>Name</th>
              <th>City</th>
              <th>Country</th>
              <th>IATA</th>
              <th>ICAO</th>
            </tr>
          </thead>
          <tbody>
            <% @airports.each do |a| %>
              <tr>
                <td><%= link_to a.name, a, class: "text-decoration-none fw-semibold" %></td>
                <td><%= a.city %></td>
                <td><%= a.country %></td>
                <td><%= a.iata %></td>
                <td><%= a.icao %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p class="text-muted text-center my-4">No airports found matching your search.</p>
      <% end %>
    </div>
  </div>

  <div class="pagination justify-content-center my-3">
    <%= paginate @airports %>
  </div>
</div>
