<h1>Airlines</h1>
<form class="row g-2 mb-3">
  <div class="col-md-10">
    <input class="form-control" type="search" name="q" value="<%= @q %>" placeholder="Search name, country, IATA, ICAO">
  </div>
  <div class="col-md-2">
    <button class="btn btn-primary w-100">Search</button>
  </div>
</form>

<table class="table table-striped">
  <thead><tr><th>Name</th><th>Country</th><th>IATA</th><th>ICAO</th></tr></thead>
  <tbody>
    <% @airlines.each do |al| %>
      <tr>
        <td><%= link_to al.name, al %></td>
        <td><%= al.country %></td>
        <td><%= al.iata %></td>
        <td><%= al.icao %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @airlines %>
